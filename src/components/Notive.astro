---
export interface Props {
  title: string;
  subTitle: string;
}

const { title , subTitle} = Astro.props;
import Noticias from './Noticias.astro'
---

<section class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8">
    <div class="flex flex-col items-center gap-4">
      <slot />
      <h2 class="gradient-text text-center font-extrabold tracking-tight text-3xl"> {title} </h2>
    </div>
  
    <p class="max-w-lg text-center font-extrabold text-2xl">
      {subTitle}
    </p>
    <Noticias></Noticias>
    <slot />
  </section>
  
