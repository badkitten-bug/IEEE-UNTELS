---
export interface Props {
  title: string;
  subTitle: string;
}

const { title , subTitle} = Astro.props;
---

<section class="flex flex-col items-center justify-center gap-4 space-y-8 w-full h-screen">
    <div class="flex flex-col items-center gap-4 w-full">
      <slot name="" />
      <h1 class="gradient-text text-center font-extrabold tracking-tight text-6xl">
        {title}
      </h1>
    </div>
  
    <p class="max-w-xl text-center font-extrabold text-2xl">
      {subTitle}
    </p>
    
    <slot />
  </section>
  
